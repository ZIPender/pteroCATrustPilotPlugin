{
    "name": "trustpilot-review",
    "display_name": "Trustpilot Review Plugin",
    "version": "1.2.0",
    "author": "ZIPender",
    "description": "Displays a permanent Trustpilot review card on the dashboard with dynamic rating and review count from your Trustpilot page.",
    "license": "MIT",
    "pteroca": {
        "min": "0.6.0",
        "max": "1.0.0"
    },
    "capabilities": [
        "entities",
        "migrations",
        "ui",
        "eda"
    ],
    "bootstrap_class": "Plugins\\TrustpilotReview\\Bootstrap",
    "config_schema": {
        "enabled": {
            "type": "boolean",
            "default": true,
            "hierarchy": "general",
            "required": false,
            "label": "Activer le plugin",
            "help": "Activer ou désactiver le plugin Trustpilot globalement"
        },
        "review_url": {
            "type": "string",
            "default": "https://www.trustpilot.com/evaluate/your-business",
            "hierarchy": "general",
            "required": true,
            "label": "URL Trustpilot",
            "help": "L'URL de votre page Trustpilot (ex: https://www.trustpilot.com/review/example.com)"
        },
        "enable_widget": {
            "type": "boolean",
            "default": true,
            "hierarchy": "general",
            "required": false,
            "label": "Activer le widget",
            "help": "Afficher le widget Trustpilot sur le tableau de bord"
        },
        "popup_title": {
            "type": "string",
            "default": "Vous appréciez notre service ?",
            "hierarchy": "general",
            "required": false,
            "label": "Titre",
            "help": "Titre affiché sur le widget"
        },
        "popup_message": {
            "type": "string",
            "default": "Si vous avez apprécié notre service, nous serions ravis d'avoir votre avis sur Trustpilot !",
            "hierarchy": "general",
            "required": false,
            "label": "Message",
            "help": "Message affiché sur le widget"
        },
        "test_mode": {
            "type": "boolean",
            "default": false,
            "hierarchy": "general",
            "required": false,
            "label": "Mode test",
            "help": "Affiche un badge TEST MODE sur le widget. Désactivez en production !"
        }
    },
    "assets": {
        "css": [
            "css/trustpilot.css"
        ],
        "js": [
            "js/trustpilot.js"
        ]
    }
}
