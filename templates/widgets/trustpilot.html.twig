{#
 # Trustpilot Review Widget Template
 #
 # Displays a card prompting users to leave a Trustpilot review
 # when their server is approaching expiration.
 #}
<div class="card shadow-sm h-100 trustpilot-widget" id="trustpilot-review-widget">
    <div class="card-header bg-success text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-star me-2"></i>
            {{ popup_title }}
        </h5>
    </div>
    <div class="card-body">
        <p class="card-text">{{ popup_message }}</p>
        <p class="text-muted small">
            <i class="fas fa-clock me-1"></i>
            Server expiring within <strong>{{ days_before_expiry }}</strong> days
        </p>
    </div>
    <div class="card-footer bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-sm btn-outline-secondary trustpilot-dismiss" data-dismiss="trustpilot">
                <i class="fas fa-times me-1"></i> No thanks
            </button>
            <a href="{{ review_url }}" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-success">
                <i class="fas fa-external-link-alt me-1"></i> Leave a Review
            </a>
        </div>
    </div>
</div>
