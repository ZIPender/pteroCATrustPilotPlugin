<div id="trustpilot-review-widget" class="trustpilot-plugin-wrapper">
    {% if test_mode %}
        <span class="badge bg-warning text-dark trustpilot-test-badge">TEST MODE</span>
    {% endif %}

    {% if display_mode == 'trustbox' %}
        {# ═══ TRUSTBOX EMBED MODE ═══ #}
        <div class="trustpilot-trustbox-wrapper">
            <script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>
            <div class="trustpilot-widget"
                 data-locale="{{ trustbox_locale|default('en-US') }}"
                 data-template-id="{{ trustbox_template_id }}"
                 data-businessunit-id="{{ business_unit_id }}"
                 data-style-height="{{ trustbox_height }}"
                 data-style-width="100%"
                 data-theme="{{ trustbox_theme }}"
                 data-stars="{{ trustbox_stars }}">
                <a href="https://www.trustpilot.com/review/{{ business_domain }}" target="_blank" rel="noopener noreferrer">Trustpilot</a>
            </div>
        </div>
    {% else %}
        {# ═══ CUSTOM CAROUSEL MODE ═══ #}
        <div class="card shadow-sm h-100 trustpilot-card">
            <div class="card-header trustpilot-card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-star me-2"></i>{{ popup_title }}
                </h5>
            </div>
            <div class="card-body">
                {# Score summary #}
                <div class="trustpilot-rating-container mb-3">
                    {% if trustpilot_reviews_count > 0 %}
                        <div class="trustpilot-stars" data-rating="{{ trustpilot_score }}">
                            {% set display_stars = trustpilot_stars|default(trustpilot_score) %}
                            {% for i in 1..5 %}
                                {% if i <= display_stars|round(0, 'floor') %}
                                    <i class="fas fa-star trustpilot-star filled"></i>
                                {% elseif i - 0.5 <= display_stars %}
                                    <i class="fas fa-star-half-alt trustpilot-star filled"></i>
                                {% else %}
                                    <i class="far fa-star trustpilot-star empty"></i>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="trustpilot-score-info">
                            <span class="trustpilot-score-value">{{ trustpilot_score|number_format(1) }}</span>
                            <span class="trustpilot-separator">/</span>
                            <span class="trustpilot-score-max">5</span>
                            <span class="trustpilot-reviews-count">
                                ({{ trustpilot_reviews_count }} {{ 'plugin_trustpilot_review.widget.reviews'|trans }})
                            </span>
                        </div>
                    {% else %}
                        <div class="trustpilot-stars">
                            {% for i in 1..5 %}
                                <i class="far fa-star trustpilot-star empty"></i>
                            {% endfor %}
                        </div>
                        <div class="trustpilot-no-reviews">
                            {{ 'plugin_trustpilot_review.widget.no_reviews'|trans }}
                        </div>
                    {% endif %}
                </div>

                {# Review carousel #}
                {% if reviews is defined and reviews|length > 0 %}
                    <div class="trustpilot-carousel" id="trustpilot-carousel">
                        <div class="trustpilot-carousel-inner">
                            {% for review in reviews %}
                                <div class="trustpilot-carousel-slide{% if loop.first %} active{% endif %}" data-index="{{ loop.index0 }}">
                                    <div class="trustpilot-review-card">
                                        <div class="trustpilot-review-header">
                                            <span class="trustpilot-reviewer-name">{{ review.consumer_name }}</span>
                                            <div class="trustpilot-review-stars">
                                                {% for i in 1..5 %}
                                                    {% if i <= review.stars %}
                                                        <i class="fas fa-star filled"></i>
                                                    {% else %}
                                                        <i class="fas fa-star empty"></i>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                        {% if review.title %}
                                            <h6 class="trustpilot-review-title">{{ review.title }}</h6>
                                        {% endif %}
                                        <p class="trustpilot-review-text">{{ review.text|length > 180 ? review.text|slice(0, 180) ~ '...' : review.text }}</p>
                                        {% if review.created_at %}
                                            <small class="trustpilot-review-date text-muted">{{ review.created_at|slice(0, 10) }}</small>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {% if reviews|length > 1 %}
                            <button class="trustpilot-carousel-prev" aria-label="Previous review" type="button">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <button class="trustpilot-carousel-next" aria-label="Next review" type="button">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                            <div class="trustpilot-carousel-dots">
                                {% for review in reviews %}
                                    <span class="trustpilot-dot{% if loop.first %} active{% endif %}" data-index="{{ loop.index0 }}"></span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {% if popup_message %}
                    <p class="card-text mt-3">{{ popup_message }}</p>
                {% endif %}
            </div>

            {% if show_leave_review_button %}
                <div class="card-footer trustpilot-card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="trustpilot-powered-by">
                            <i class="fas fa-shield-alt me-1"></i>{{ 'plugin_trustpilot_review.widget.powered_by'|trans }}
                        </small>
                        <a href="{{ review_url }}" target="_blank" rel="noopener noreferrer" class="btn btn-success btn-sm trustpilot-review-btn">
                            <i class="fas fa-external-link-alt me-1"></i>{{ 'plugin_trustpilot_review.widget.leave_review'|trans }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}
</div>
