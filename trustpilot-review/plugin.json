{
    "name": "trustpilot-review",
    "display_name": "Trustpilot Review Plugin",
    "version": "2.0.0",
    "author": "PteroCA Community",
    "description": "Trustpilot integration with AFS review invitations, TrustBox widget embed, and custom review carousel with full admin configuration.",
    "license": "MIT",
    "pteroca": {
        "min": "0.6.0",
        "max": "1.0.0"
    },
    "capabilities": [
        "entities",
        "migrations",
        "ui",
        "eda"
    ],
    "bootstrap_class": "Plugins\\TrustpilotReview\\Bootstrap",
    "config_schema": {
        "enabled": {
            "type": "boolean",
            "default": true,
            "hierarchy": "general",
            "required": false,
            "label": "plugin_trustpilot_review.settings.enabled",
            "help": "plugin_trustpilot_review.settings.enabled_help"
        },
        "review_url": {
            "type": "string",
            "default": "https://www.trustpilot.com/evaluate/your-business",
            "hierarchy": "general",
            "required": true,
            "label": "plugin_trustpilot_review.settings.review_url",
            "help": "plugin_trustpilot_review.settings.review_url_help"
        },
        "test_mode": {
            "type": "boolean",
            "default": false,
            "hierarchy": "general",
            "required": false,
            "label": "plugin_trustpilot_review.settings.test_mode",
            "help": "plugin_trustpilot_review.settings.test_mode_help"
        },

        "api_key": {
            "type": "string",
            "default": "",
            "hierarchy": "api",
            "required": true,
            "label": "plugin_trustpilot_review.settings.api_key",
            "help": "plugin_trustpilot_review.settings.api_key_help"
        },
        "api_secret": {
            "type": "string",
            "default": "",
            "hierarchy": "api",
            "required": true,
            "label": "plugin_trustpilot_review.settings.api_secret",
            "help": "plugin_trustpilot_review.settings.api_secret_help"
        },
        "business_unit_id": {
            "type": "string",
            "default": "",
            "hierarchy": "api",
            "required": false,
            "label": "plugin_trustpilot_review.settings.business_unit_id",
            "help": "plugin_trustpilot_review.settings.business_unit_id_help"
        },
        "business_domain": {
            "type": "string",
            "default": "",
            "hierarchy": "api",
            "required": false,
            "label": "plugin_trustpilot_review.settings.business_domain",
            "help": "plugin_trustpilot_review.settings.business_domain_help"
        },

        "afs_enabled": {
            "type": "boolean",
            "default": false,
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_enabled",
            "help": "plugin_trustpilot_review.settings.afs_enabled_help"
        },
        "afs_send_mode": {
            "type": "string",
            "default": "immediate",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_send_mode",
            "help": "plugin_trustpilot_review.settings.afs_send_mode_help"
        },
        "afs_delay_hours": {
            "type": "integer",
            "default": 72,
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_delay_hours",
            "help": "plugin_trustpilot_review.settings.afs_delay_hours_help"
        },
        "afs_sender_email": {
            "type": "string",
            "default": "",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_sender_email",
            "help": "plugin_trustpilot_review.settings.afs_sender_email_help"
        },
        "afs_sender_name": {
            "type": "string",
            "default": "",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_sender_name",
            "help": "plugin_trustpilot_review.settings.afs_sender_name_help"
        },
        "afs_reply_to": {
            "type": "string",
            "default": "",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_reply_to",
            "help": "plugin_trustpilot_review.settings.afs_reply_to_help"
        },
        "afs_template_id": {
            "type": "string",
            "default": "",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_template_id",
            "help": "plugin_trustpilot_review.settings.afs_template_id_help"
        },
        "afs_redirect_uri": {
            "type": "string",
            "default": "",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_redirect_uri",
            "help": "plugin_trustpilot_review.settings.afs_redirect_uri_help"
        },
        "afs_locale": {
            "type": "string",
            "default": "en-US",
            "hierarchy": "afs",
            "required": false,
            "label": "plugin_trustpilot_review.settings.afs_locale",
            "help": "plugin_trustpilot_review.settings.afs_locale_help"
        },

        "enable_widget": {
            "type": "boolean",
            "default": true,
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.enable_widget",
            "help": "plugin_trustpilot_review.settings.enable_widget_help"
        },
        "display_mode": {
            "type": "string",
            "default": "custom",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.display_mode",
            "help": "plugin_trustpilot_review.settings.display_mode_help"
        },
        "popup_title": {
            "type": "string",
            "default": "Enjoying our service?",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.popup_title",
            "help": "plugin_trustpilot_review.settings.popup_title_help"
        },
        "popup_message": {
            "type": "string",
            "default": "If you've enjoyed our service, we'd love to hear your feedback on Trustpilot!",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.popup_message",
            "help": "plugin_trustpilot_review.settings.popup_message_help"
        },
        "show_leave_review_button": {
            "type": "boolean",
            "default": true,
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.show_leave_review_button",
            "help": "plugin_trustpilot_review.settings.show_leave_review_button_help"
        },
        "trustbox_template_id": {
            "type": "string",
            "default": "53aa8912dec7e10d38f59f36",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.trustbox_template_id",
            "help": "plugin_trustpilot_review.settings.trustbox_template_id_help"
        },
        "trustbox_theme": {
            "type": "string",
            "default": "light",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.trustbox_theme",
            "help": "plugin_trustpilot_review.settings.trustbox_theme_help"
        },
        "trustbox_height": {
            "type": "string",
            "default": "140px",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.trustbox_height",
            "help": "plugin_trustpilot_review.settings.trustbox_height_help"
        },
        "trustbox_stars": {
            "type": "string",
            "default": "4,5",
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.trustbox_stars",
            "help": "plugin_trustpilot_review.settings.trustbox_stars_help"
        },
        "carousel_review_count": {
            "type": "integer",
            "default": 5,
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.carousel_review_count",
            "help": "plugin_trustpilot_review.settings.carousel_review_count_help"
        },
        "carousel_min_stars": {
            "type": "integer",
            "default": 4,
            "hierarchy": "widget",
            "required": false,
            "label": "plugin_trustpilot_review.settings.carousel_min_stars",
            "help": "plugin_trustpilot_review.settings.carousel_min_stars_help"
        }
    },
    "assets": {
        "css": [
            "css/trustpilot.css"
        ],
        "js": [
            "js/trustpilot.js"
        ]
    }
}
